	  steam-runtime&
    xrandr --output DP-2 --mode 2560x1440 --pos 0x0 --rotate normal -r 144&
fi

if [[ "$HOST" == "msi" ]]; then
    thunderbird&
fi

# i3-subscribe&
# xcmenu -daemon&
qutebrowser&
emacs --daemon&
