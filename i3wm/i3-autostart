#!/bin/bash

if [[ "$HOST" == "msi" ]] && [ "$XDG_VTNR" -eq 1]; then
  synergy&
  lxpolkit&
fi

if [[ "$HOST" == "x1c" ]] || [ "$XDG_VTNR" -eq 2 ]; then
  steam-native&
  lutris&
  xrandr --output DP-2 --mode 2560x1440 --pos 0x0 --rotate normal -r 144&
fi

if [[ "$HOST" == "msi" ]]; then
  thunderbird&
fi

discord&
telegram-desktop&
qutebrowser&
emacs --daemon&
#i3-subscribe
#xcmenu -daemon
nm-applet&
dunst&
i3-focus-last&
#i3-scrachpad&
pamixer --set-volume 50&
(mpd ; mpc pause)&
#redshift -l 51.12:20.55&
